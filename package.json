{
	"name": "proshop-ecommerce",
	"version": "1.0.0",
	"description": "e-commerce application build with MERN stack",
	"type": "module",
	"main": "server.ts",
	"scripts": {
		"start": "node dist/backend/server.js",
		"server": "nodemon dist/backend/server.js",
		"client": "cd frontend && yarn run dev",
		"dev": "concurrently \"yarn run server\" \"yarn run client\"",
		"data:import": "node dist/backend/seeder.js",
		"data:destroy": "node dist/backend/seeder.js -d",
		"format": "prettier . --write",
		"build": "tsc"
	},
	"author": "Jorden Gerovac",
	"license": "MIT",
	"dependencies": {
		"@types/jsonwebtoken": "9.0.10",
		"bcryptjs": "3.0.2",
		"colors": "1.4.0",
		"dotenv": "17.0.0",
		"express": "5.1.0",
		"jsonwebtoken": "9.0.2",
		"mongoose": "8.16.1"
	},
	"devDependencies": {
		"@types/express": "5.0.3",
		"concurrently": "9.2.0",
		"nodemon": "3.1.10",
		"prettier": "3.6.2",
		"ts-node": "10.9.2",
		"typescript": "5.8.3"
	}
}
